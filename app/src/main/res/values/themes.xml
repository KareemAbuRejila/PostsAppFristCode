<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PostsApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">13sp</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="fontStyle">@style/customfontstyle</item>
        <!-- Customize your  font theme here. -->
        <item  name="fontFamily">@font/open_sans</item>
        <item name="font">@font/open_sans</item>
        <item name="android:textColor">@android:color/black</item>


    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/open_sans</item>
        <item name="font">@font/open_sans</item>
    </style>

    <style name="Theme.PostsApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="customfontstyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="text_size" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="ProgressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/black</item>
    </style>
</resources>